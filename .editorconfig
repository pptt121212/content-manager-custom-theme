# 内容管家辅助主题 - 编辑器配置
# 了解更多: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.txt]
indent_style = space
indent_size = 4